<div class="card black-card new-mail-card">
  <h4 class="card-header"><%= I18n.t('corporations.create_a_corporation') %></h4>
  <div class="card-body">
    <%= form_for(@corporation, url: corporations_path, validate: true) do |f| %>
      <div class="field mb-3">
        <%= f.text_field :name, placeholder: I18n.t('corporations.name'), class: 'form-control' %>
      </div>
      <div class="field mb-3">
        <%= f.text_field :ticker, placeholder: I18n.t('corporations.ticker'), class: 'form-control' %>
      </div>
      <div class="field mb-3">
        <%= f.text_area :bio, placeholder: I18n.t('corporations.about'), class: 'form-control' %>
        <p><small><%= I18n.t('devise.markdown_support').html_safe %></small></p>
      </div>
      <div class="field mb-3">
        <%= f.number_field :tax, placeholder: I18n.t('corporations.tax_rate'), class: 'form-control', max: 100, min: 0 %>
      </div>
      
      <div class="actions">
        <%= f.submit I18n.t('corporations.create'), class: 'btn btn-outline-primary' %>
      </div>
    <% end %>
  </div>
</div>