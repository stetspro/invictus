<div class="modal fade" id="corporation-apply-modal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= I18n.t('corporations.apply_to') %> <%= corporation.name %></h5>
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <textarea class="form-control" placeholder="<%= I18n.t('corporations.application_placeholder') %>"></textarea>
      </div>
      <div class="modal-footer">
        <button class="btn btn-outline-primary corporation-apply-btn" data-id="<%= corporation.id %>"><%= I18n.t('corporations.apply') %></button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>