<div class="card black-card">
  <h5 class="card-header"><%= I18n.t('game.donate') %></h5>
  <div class="card-body">
    <div class="text-center">
      <p><%= I18n.t('game.donate_text').html_safe %></p>
      <p class="color-red"><%= I18n.t('game.donate_alert') %></p>
      <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
        <input type="hidden" name="cmd" value="_s-xclick" />
        <input type="hidden" name="hosted_button_id" value="PTXZHALEG5QAY" />
        <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donate_SM.gif" border="0" name="submit" title="PayPal - The safer, easier way to pay online!" alt="Donate with PayPal button" />
        <img alt="" border="0" src="https://www.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1" />
      </form>
      
      <div class="mt-5">
        <h5><%= I18n.t('game.list_awesome_donators') %></h5>
          <% User.where(donator: true).each do |u| %>
              <%= u.full_name %><br>
          <% end %>
      </div>
    </div>
  </div>
</div>