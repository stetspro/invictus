<!DOCTYPE html>
<html>
  <head>
    <title>Stellar Invictus</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="pragma" content="no-cache" />
    <link rel="icon"type="image/png" href="/favicon.png">
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-permanent': 'reload' %>
    
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pixi.js/4.8.5/pixi.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vis/4.21.0/vis.min.js"></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-53473075-6"></script>
  </head>

  <body class="<%= 'pt-70px mobile-pt-0' if current_user and !current_page?(root_path) %>">
    <%= render 'layouts/navbar' %>
  
    <div class="<%= 'mt-1rem container mb-3' unless current_page?(root_path) %>" id="app-container">
      
      <% unless current_page?(root_path) || !current_user %>
        <div class="display-none mobile-display-block">
          <div class="card black-card player-info-card mobile-player-info">
            <%= render 'game/player_info' %>
          </div>
        </div>
      <% end %>
      
      <%= render 'layouts/alerts' %>
      
      <div class="card card-body system-card mb-3 <%= 'mobile-display-block display-none' unless current_page?(game_path) || current_page?(station_path) %>">
        <%= render partial: 'game/system_card' %>
      </div>
      
      <% if !current_page?(game_path) and !current_page?(station_path) and current_user&.system %>
        <div class="card black-card mb-3 chat-card mobile-display-block display-none">
          <h5 class="card-header">
            <%= I18n.t('game.chat') %>
            <div class="float-right">
              <a class="btn btn-xs btn-outline-primary p-0-5 text-primary mobile-display-none" onclick="window.open('/game/chat?popup=true',null,'height=500,width=800')"><i class="fa fa-expand-arrows-alt"></i></a>
              <a data-toggle="collapse" data-target="#collapse-chat" href="#0">
                <div class="btn btn-xs btn-outline-primary p-0-5"><i class="fa fa-arrow-down"></i></div>
              </a>
            </div>
          </h5>
          <div class="collapse show" id="collapse-chat">
            <div class="card-body">
              <%= render partial: 'game/chat', locals: {local_messages: @local_messages, system_users: @system_users, global_messages: @global_messages} %>
            </div>
          </div>
        </div>
      <% end %>
      
      <%= yield %>
      
      <%= render 'layouts/modals' %>
    </div>
    
    <div class="<%= 'mobile-display-none' unless current_page?(root_path) || !current_user %>">
      <%= render 'layouts/footer' %>
    </div>
    
    <% unless current_page?(root_path) || !current_user %>
      <div class="display-none mobile-display-block">
        <%= render 'layouts/mobile_nav' %>
      </div>
    <% end %>
    
    <script>
      var logged_in = <%= !current_user.nil? and !current_user.faction.nil? %>
    </script>
    
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      gtag('config', 'UA-53473075-6');
      gtag('config', 'AW-878935501');
    </script>
    
    <!-- Facebook Pixel Code -->
    <script>
      !function(f,b,e,v,n,t,s)
      {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
      n.callMethod.apply(n,arguments):n.queue.push(arguments)};
      if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
      n.queue=[];t=b.createElement(e);t.async=!0;
      t.src=v;s=b.getElementsByTagName(e)[0];
      s.parentNode.insertBefore(t,s)}(window, document,'script',
      'https://connect.facebook.net/en_US/fbevents.js');
      fbq('init', '380971416024831');
      fbq('track', 'PageView');
    </script>
    <noscript><img height="1" width="1" style="display:none"
      src="https://www.facebook.com/tr?id=380971416024831&ev=PageView&noscript=1"
    /></noscript>
    <!-- End Facebook Pixel Code -->
  </body>
</html>