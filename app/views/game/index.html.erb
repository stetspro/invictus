<div class="card card-body system-card mb-3">
  <h4 class="text-white"><span class="bg-black text-span"><%= I18n.t('game.current_location') %> <%= current_user.system.name %></span></h4>
  <h4 class="text-white"><span class="bg-black text-span"><%= I18n.t('game.current_sec_level') %> <span class="color-sec-<%= current_user.system.security_status %>"><%= current_user.system.security_status.upcase %></span></span></h4>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card">
      <h5 class="card-header"><%= I18n.t('game.jumpgates') %></h5>
      <div class="card-body">
        <% current_user.system.jumpgates.each do |jumpgate| %>
          <div class="card text-white bg-info card-body mb-3">
            <h5><%= jumpgate.destination.name %></h5>
            <button class="btn btn-primary text-center width-max">Warp To</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="card">
      <h5 class="card-header"><%= I18n.t('game.players') %></h5>
      <div class="card-body">
        <div class="row">
          <% current_user.system.users.each do |user| %>
            <% #next if user.id == current_user.id %>
            <div class="col-md-4">
              <div class="card text-white bg-info card-body mb-3">
                <h5><%= user.name %> <%= user.family_name %></h5>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>