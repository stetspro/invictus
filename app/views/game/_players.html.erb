<div class="card black-card players-card" id="players-card">
  <h5 class="card-header"><%= current_user.location.name %></h5>
  <div class="card-body">
    <table class="table table-striped table-bordered table-sm">
      <thead>
        <tr>
          <th id="img-td"></td>
          <th><%= I18n.t('overview.name') %></td>
          <th><%= I18n.t('overview.type') %></th>
          <th><%= I18n.t('overview.alliance') %></th>
          <th id="btn-td"></td>
        </tr>
      </thead>
      <tbody>
        <%= render 'game/location_info' %>
        <%= render 'game/npc_info' %>
        <% local_users.each do |user| %>
          <% next if user.id == @current_user.id %>
          <tr class="<%= 'target-flash' if user.target == current_user and !user.is_attacking %> <%= 'attack-flash' if user.target == current_user and user.is_attacking %>">
            <td><%= image_tag('icons/helmet.png') %></td>
            <td class="players-card-name-td"><%= user.full_name %></td>
            <td><%= user.active_spaceship.name %></td>
            <td><%= user.faction.name %></td>
            <td>
              <button class="btn btn-outline-warning btn-xs target-player-btn" data-toggle="tooltip" data-placement="top" data-id="<%= user.id %>" data-title="<%= I18n.t('tooltips.target') %>">
                <i class='fa fa-crosshairs'></i>
              </button>
              <button class="btn btn-outline-primary btn-xs player-modal" data-toggle="tooltip" data-placement="top" data-id="<%= user.id %>" data-title="<%= I18n.t('tooltips.info') %>">
                <i class='fa fa-info'></i>
              </button>
              <%= link_to "<i class='fa fa-comment-alt'></i>".html_safe, new_game_mail_path(to: user.full_name), class: 'btn btn-outline-primary btn-xs', data: {toggle: 'tooltip', placement: 'top'}, title: I18n.t('tooltips.message') %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>