<div class="row">
  <div class="col-md-6 row mobile-mb-10">
    <div class="col-6 player-space-ship" data-ship-image="<%= image_path("ships/#{ship_vars['thruster-image']}") %>">
    </div>
    <div class="col-6 text-left">
      <div class="mt-5px">
        <span><%= current_user.full_name %></span><br>
        <span><%= I18n.t('ships.hp').upcase %>: <span id="own-ship-health"><%= current_user.active_spaceship.hp %></span></span><br>
        <span><%= I18n.t('ships.defense').upcase %>: <%= current_user.active_spaceship.get_defense %></span><br>
        <span class="color-sec-high"><%= I18n.t('ships.septarium_usage').upcase %>: <span id="septarium-usage"><%= current_user.active_spaceship.get_septarium_usage %></span></span>
      </div>
    </div>
    <div class="col-12 mt-3 pl-0">
      <button class="btn btn-outline-primary" data-toggle="modal" data-target="#inventory-modal"><%= I18n.t('ships.cargohold') %></button>
      <% current_user.active_spaceship.get_main_equipment.each do |equipment| %>
      <% if equipment.get_attribute('type') == 'Repair Bot' %>
        <button class="btn <%= 'btn-outline-secondary' if !equipment.active %> <%= 'btn-outline-success' if equipment.active %> use-equipment-btn" data-id="<%= equipment.id %>" data-toggle="tooltip" data-placement="top" title="<%= equipment.get_attribute('name') %>">
          <i class="fa fa-wrench"></i>
        </button>
      <% end %>
    <% end %>
    </div>
  </div>
  <div class="col-md-6 row">
    <% if current_user.target_id %>
      <%= render 'game/targets/player' %>
    <% elsif current_user.mining_target_id %>
      <%= render 'game/targets/mining' %>
    <% elsif current_user.npc_target_id %>
      <%= render 'game/targets/npc' %>
    <% else %>
      <div class="col-6 enemy-space-ship">
      </div>
      <div class="col-6 text-left">
        <div class="mt-5px">
        </div>
      </div>
      <div class="col-12 mt-3 pl-0">
      </div>
    <% end %>
  </div>
</div>