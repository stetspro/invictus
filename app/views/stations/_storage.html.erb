<table class="table table-bordered table-hover table-sm station-storage-table">
  <thead>
    <tr>
      <th scope="col">Qty.</th>
      <th scope="col"><%= I18n.t('items.name') %></th>
      <th scope="col"><%= I18n.t('items.type') %></th>
      <th class="btn-th"></th>
    </tr>
  </thead>
  <tbody>
    <% current_user.location.get_items(current_user.id).each do |loader, times| %>
      <tr>
        <td><%= times %>x</td>
        <td><%= Item.find_by(loader: loader).get_attribute('name') %></td>
        <td><%= Item.find_by(loader: loader).get_attribute('type') %></td>
        <td>
          <a class="btn btn-outline-primary btn-sm" role="button" data-toggle="tooltip" data-placement="top" data-title="<%= I18n.t('tooltips.load') %>"><i class="fa fa-arrow-down"></i></a>
          <a class="btn btn-outline-success btn-sm" role="button" data-toggle="tooltip" data-placement="top" data-title="<%= I18n.t('tooltips.sell') %>"><i class="fa fa-dollar-sign"></i></a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>